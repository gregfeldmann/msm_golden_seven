<h1>Add a New Movie</h1>

<form action="/create_movie">
    <div>
        <label for="movie_title_input">
        Title
            
        </label>
            <input id="movie_title_input" type="text", name="movie_title">
    </div>
    
    <div>
        <label for="movie_year_input">
        Year   
            
        </label>
            <div class="col-sm-10">
              <textarea id="movie_year_input" name="movie_year" placeholder="Year" class="form-control" rows="3"></textarea>
            </div>
    </div>
    
    <div>
        <label for="movie_duration_input">
        Duration
            
        </label>
            <input id="movie_duration_input" type="text", name="movie_duration">
    </div>
    
     <div>
        <label for="movie_description_input">
        Description
            
        </label>
            <input id="movie_description_input" type="text", name="movie_description">
    </div>
    
    <div>
        <label for="movie_image_input">
        Image url
            
        </label>
            <input id="movie_image_input" type="text", name="movie_image">
    </div>
    
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <p><a href="/movies/<%= @movie.id %>" class="btn btn-primary">Add movie</a></p>
    </div>
  </div>
  
</form>