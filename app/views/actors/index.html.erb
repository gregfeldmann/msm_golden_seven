<h1>All Actors</h1>

<a href="/actor/new">
  Add a new actor
</a>

<%= @list_of_actors.each do |actor| %>
  <div class="thumbnail">
    <img src="<%= actor.image_url %>">

    <div class="name">
      <a href="/actors/<%= actor.id %>" class="btn btn-default btn-block">
        <%= @actor_name %>
      </a>
      
    <div class="name">
      <a href="/actors/<%= actor.id %>" class="btn btn-default btn-block">
        Show details
      </a>

      <a href="/actors/<%= actor.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_actor/<%= actor.id %>" class="btn btn-default btn-block">
        Delete
      </a>
    </div>
  </div>
<% end %>