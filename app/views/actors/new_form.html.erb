<h1>Add a New Actor</h1>

<form action="/create_actor">
    <div>
        <label for="actor_name_input">
        Name
            
        </label>
            <input id="actor_name_input" type="text", name="actor_name">
    </div>
    
    <div>
        <label for="actor_bio_input">
        Bio    
            
        </label>
            <div class="col-sm-10">
              <textarea id="actor_bio_input" name="actor_bio" placeholder="Bio" class="form-control" rows="3"></textarea>
            </div>
    </div>
    
    <div>
        <label for="actor_dob_input">
        Dob
            
        </label>
            <input id="actor_dob_input" type="text", name="actor_dob">
    </div>
    
    <div>
        <label for="actor_image_input">
        Image url
            
        </label>
            <input id="actor_image_input" type="text", name="actor_image">
    </div>
    
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <p><a href="/actors/<%=  %>" class="btn btn-primary">Add actor</a></p>
    </div>
  </div>
  
</form>
